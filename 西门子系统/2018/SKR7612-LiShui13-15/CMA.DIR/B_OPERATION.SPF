PROC B_OPERATION DISPLON
;;**********程序功能**********
;;对刀主程序:
;;首次对刀 二次对刀 自动对刀 角度计算 等子程序的调用
;;***************************

IF (INI[53]<>0) AND (GRIND[2]==1)
    F_GRINDWHEEL_RUN(INI[53])
ENDIF

IF TOOL_SET[8]==0
    IF GRIND[2]==1
        C_OPERATION_JOG
    ELSE
        C_OPERATION_AUTO
    ENDIF
ELSE
    C_OPERATION_RAND
ENDIF

IF (DRESSER[6]<>0) OR ($A_DBB[2]==1)
    RET
ENDIF

PLCASUP1
M0
C_EXITWORK

RET

