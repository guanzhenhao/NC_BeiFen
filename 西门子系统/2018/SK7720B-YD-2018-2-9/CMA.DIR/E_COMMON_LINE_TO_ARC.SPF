PROC E_COMMON_LINE_TO_ARC(REAL ANG_1,REAL ANG_2,REAL ANG_3,REAL RND_VALUE_A,REAL RND_VALUE_B,VAR REAL LENGTH) DISPLOF
;;**********程序功能**********
;;一段直线转化成圆弧的长度
;;***************************

IF ANG_2>ANG_3
    LENGTH=RND_VALUE_B/TAN((180-ANG_2+ANG_3)/2)
ELSE
    LENGTH=RND_VALUE_B/TAN((180+ANG_2-ANG_3)/2)
ENDIF

IF ANG_1<>180
    IF ANG_1>ANG_2
        LENGTH=LENGTH+RND_VALUE_A/TAN((180-ANG_1+ANG_2)/2)
    ELSE
        LENGTH=LENGTH+RND_VALUE_A/TAN((180+ANG_1-ANG_2)/2)
    ENDIF
ENDIF

RET

