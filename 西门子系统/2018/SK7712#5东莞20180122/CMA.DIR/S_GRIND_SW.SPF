PROC S_GRIND_SW DISPLOF
;;**********程序功能**********
;;外螺纹小循环:
;;完整磨削一个工件循环
;;***************************
DEF REAL TEMPC
WORK[1]=0
WORK[2]=360/WORK[0]
INI[47]=1

IF INI[0]==1
	TEMPC=-TOOL_SET[41]/INI[5]*360
ELSE
	TEMPC=TOOL_SET[41]/INI[5]*360
ENDIF

IF (GRIND[4]>-1)AND(GRIND[4]<1)
	PROCESS[4]=PROCESS[4]+GRIND[4]/2
	PROCESS[13]=PROCESS[13]+GRIND[4]/2
	GRIND[4]=0
ENDIF

WHILE(WORK[1]<WORK[0])
	WORK[3]=WORK[2]*WORK[1]
	MSG("头架到位中")
	IF (WORK[3]+TOOL_SET[4]+TEMPC)>=360
		G90 G01 C=ACP(WORK[3]+TOOL_SET[4]+TEMPC-360) F=INI[58]
	ELSE
		IF (WORK[3]+TOOL_SET[4]+TEMPC)<0
			G90 G01 C=ACP(WORK[3]+TOOL_SET[4]+TEMPC+360) F=INI[58]
		ELSE
			G90 G01 C=ACP(WORK[3]+TOOL_SET[4]+TEMPC) F=INI[58]
		ENDIF
	ENDIF
	MSG("到磨削起点")
	G90 G01 Z=INI[6] F=INI[56]
	MSG("砂轮正在进入工件螺纹")
	G90 G01 X=PROCESS[4]+1 F=INI[55]
	IF PROCESS[6]==0
		X=PROCESS[4] F=PROCESS[11]
	ELSE
		X=PROCESS[4]+PROCESS[8]/2 F=PROCESS[11]
	ENDIF
	FGROUP(Z)
	IF INI[0]==0
		S_CYCLE_SW_MESSAGE
		G301
		IF $A_DBB[2]==1
			RET
		ENDIF
		STOPRE
		IF PROCESS[6]==1
			G4 F0.5
			G91 G01 X=-PROCESS[8]/2 F=PROCESS[11]
			S_CYCLE_SW_MESSAGE
			G302
			IF $A_DBB[2]==1
				RET
			ENDIF
			IF WORK[0]<>1
				MSG("换头,砂轮退出工件")
				G90 G01 X=PROCESS[16] F=INI[55]
			ENDIF
			IF PROCESS[3]==1
				MSG("砂轮正在退出工件")
				G90 G01 X=PROCESS[16] F=INI[55]
			ENDIF
			IF(TECH_TIME[0]+TECH_TIME[1]+TECH_TIME[2]+TECH_TIME[3]+TECH_TIME[4]==TECHNOLOGY[10]+TECHNOLOGY[11]+TECHNOLOGY[12]+TECHNOLOGY[13]+DIY[1])		
				MSG("砂轮正在退出工件")
				G90 G01 X=PROCESS[16] F=INI[55]
			ENDIF
		ELSE
			MSG("砂轮退出工件")
			G90 G01 X=PROCESS[16] F=INI[55]
			INI[47]=0
			MSG("台面到磨削起点")
			G01 Z=INI[6] F=INI[56]
			IF $A_DBB[2]==1
				RET
			ENDIF
			STOPRE
			INI[47]=1
		ENDIF
		STOPRE
	ELSE
		S_CYCLE_SW_MESSAGE
		G303
		IF $A_DBB[2]==1
			RET
		ENDIF
		STOPRE
		IF PROCESS[6]==1
			G4 F0.5
			G91 G01 X=-PROCESS[8]/2 F=PROCESS[11]
			S_CYCLE_SW_MESSAGE
			G304
			IF $A_DBB[2]==1
				RET
			ENDIF
			IF WORK[0]<>1
				MSG("换头,砂轮退出工件")
				G90 G01 X=PROCESS[16] F=INI[55]
			ENDIF
			IF PROCESS[3]==1
				MSG("砂轮正在退出工件")
				G90 G01 X=PROCESS[16] F=INI[55]
			ENDIF
			IF(TECH_TIME[0]+TECH_TIME[1]+TECH_TIME[2]+TECH_TIME[3]+TECH_TIME[4]==TECHNOLOGY[10]+TECHNOLOGY[11]+TECHNOLOGY[12]+TECHNOLOGY[13]+DIY[1])		
				MSG("砂轮正在退出工件")
				G90 G01 X=PROCESS[16] F=INI[55]
			ENDIF
		ELSE
			MSG("砂轮退出工件")
			G90 G01 X=PROCESS[16] F=INI[55]
			INI[47]=0
			MSG("台面到磨削起点")
			G01 Z=INI[6] F=INI[56]
			IF $A_DBB[2]==1
				RET
			ENDIF
			STOPRE
			INI[47]=1
		ENDIF
	ENDIF
	WORK[1]=WORK[1]+1
ENDWHILE

STOPRE
INI[47]=0

RET

